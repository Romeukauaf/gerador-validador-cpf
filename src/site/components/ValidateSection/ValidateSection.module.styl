.validate-section
  @extend $disable-select
  text-align: center

  &__label
    display block

  &__input
    border-radius: 6px 0 0 6px
    padding: 10px
    text-align: center

    @media (max-width: em($phone))
      border-radius: 6px !important
      width: 100%

.message
  border-radius: 0 6px 6px 0
  background-color: darken(#FFF, 28%)
  transition: all ease 1s

  &--valid
    color: $color = green
    background-color: lighten($color, 70%)

  &--invalid
    color: $color = red
    background-color: lighten($color, 70%)

